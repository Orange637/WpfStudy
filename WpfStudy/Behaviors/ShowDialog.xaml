<Window x:Class="WpfStudy.Behaviors.ShowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShowDialog"
        Width="500"
        Height="500"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Button Width="160"
                Click="ShowDialogWithoutOwner"
                Content="ShowDialogWithoutOwner" />
        <Button Width="160"
                Click="ShowDialogWithOwner"
                Content="ShowDialogWithOwner=this" />
    </StackPanel>
</Window>
