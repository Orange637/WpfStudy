<controls:View x:Class="WpfStudy.Behaviors.CustomBehavior"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:behaviors="clr-namespace:WpfStudy.Resources.Behaviors;assembly=WpfStudy.Resources"
               xmlns:controls="clr-namespace:WpfStudy.Resources.Controls;assembly=WpfStudy.Resources"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               Title="CustomBehavior"
               Width="300"
               Height="300"
               mc:Ignorable="d">
    <StackPanel>
        <TextBlock Text="Behavior is Attached Property" />
        <TextBlock Text="This Example demonstrate the Show Property as Attached Property" />
        <Rectangle Width="200"
                   Height="100"
                   Fill="GreenYellow"
                   behaviors:CustomProperty.Show="True" />
    </StackPanel>
</controls:View>
