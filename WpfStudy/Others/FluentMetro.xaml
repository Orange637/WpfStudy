<Fluent:MetroWindow x:Class="FluentTest.MetroStyle"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
                    xmlns:FluentTest="clr-namespace:FluentTest"
                    xmlns:System="clr-namespace:System;assembly=mscorlib"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    x:Name="window"
                    Title="Fluent Ribbon Control Suite 2.1"
                    Width="800"
                    Height="600"
                    FlowDirection="LeftToRight"
                    Foreground="White"
                    ResizeMode="CanResizeWithGrip"
                    RibbonThemeColor="#FF217346"
                    mc:Ignorable="d">
    <Fluent:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Fluent;Component/Themes/Metro/White.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Fluent:MetroWindow.Resources>
    <Fluent:MetroWindow.CommandBindings>
        <CommandBinding CanExecute="New_CanExecute"
                        Command="{x:Static FluentTest:TestWindow.New1}"
                        Executed="New_Executed" />
    </Fluent:MetroWindow.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Fluent:Ribbon x:Name="ribbon" AutomaticStateManagement="True">

            <Fluent:Ribbon.ContextualGroups>
                <Fluent:RibbonContextualTabGroup x:Name="tabGroup1"
                                                 Background="#FF2B579A"
                                                 Header="First"
                                                 Visibility="Visible" />

                <Fluent:RibbonContextualTabGroup x:Name="tabGroup2"
                                                 Background="#FFF2CB1D"
                                                 Header="Second"
                                                 Visibility="Visible" />

                <Fluent:RibbonContextualTabGroup x:Name="invisibleTabGroup"
                                                 Background="Red"
                                                 BorderBrush="Green"
                                                 Header="MUST BE HIDDEN"
                                                 Visibility="Visible" />
            </Fluent:Ribbon.ContextualGroups>

            <Fluent:Ribbon.Menu>
                <Fluent:Backstage>

                    <Fluent:BackstageTabControl>
                        <Fluent:Button Click="OnBtnClick"
                                       Fluent:KeyTip.Keys="S"
                                       Header="Save"
                                       Icon="Images\Save.png" />
                        <Fluent:Button Fluent:KeyTip.Keys="A"
                                       Header="Save As"
                                       Icon="Images\Save.png" />
                        <Fluent:BackstageTabItem Content="Hello" Header="TEST">

                            <Fluent:BackstageTabItem.ContentTemplate>

                                <DataTemplate>

                                    <Grid>
                                        <TextBox Text="{Binding Mode=OneWay}" />
                                    </Grid>
                                </DataTemplate>

                            </Fluent:BackstageTabItem.ContentTemplate>

                        </Fluent:BackstageTabItem>

                        <Fluent:SeparatorTabItem Header="Separator" />

                        <Fluent:BackstageTabItem Fluent:KeyTip.Keys="E"
                                                 Header="Info"
                                                 IsEnabled="False">
                            <ScrollViewer>
                                <Grid Height="400" Background="Red">
                                    <ListBox Width="100"
                                             Height="100"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Top">
                                        <ListBoxItem>1</ListBoxItem>
                                        <ListBoxItem>2</ListBoxItem>
                                        <ListBoxItem>3</ListBoxItem>
                                        <ListBoxItem>4</ListBoxItem>
                                        <ListBoxItem>5</ListBoxItem>
                                        <ListBoxItem>6</ListBoxItem>
                                        <ListBoxItem>7</ListBoxItem>
                                        <ListBoxItem>8</ListBoxItem>
                                        <ListBoxItem>9</ListBoxItem>
                                        <ListBoxItem>10</ListBoxItem>
                                    </ListBox>
                                    <Fluent:ComboBox SelectedIndex="1">
                                        <ComboBoxItem>1</ComboBoxItem>
                                        <ComboBoxItem>2</ComboBoxItem>
                                        <ComboBoxItem>3</ComboBoxItem>
                                        <ComboBoxItem>4</ComboBoxItem>
                                        <ComboBoxItem>5</ComboBoxItem>
                                    </Fluent:ComboBox>
                                </Grid>
                            </ScrollViewer>
                        </Fluent:BackstageTabItem>

                        <Fluent:BackstageTabItem Fluent:KeyTip.Keys="R" Header="Recent">
                            <TabControl Margin="20,5,20,5" Style="{DynamicResource InnerBackstageTabControlStyle}">
                                <Fluent:SeparatorTabItem Header="Test1" />
                                <TabItem Header="1" />
                                <TabItem Header="2" />
                                <TabItem Header="3" />
                                <Fluent:SeparatorTabItem Header="Test2" />
                                <TabItem Header="4" />
                            </TabControl>
                        </Fluent:BackstageTabItem>

                        <Fluent:SeparatorTabItem />
                        <Fluent:BackstageTabItem Fluent:KeyTip.Keys="N" Header="New">
                            <Grid Width="Auto"
                                  MinWidth="0"
                                  Margin="50"
                                  HorizontalAlignment="Stretch">
                                <TextBlock MinWidth="0"
                                           HorizontalAlignment="Left"
                                           Foreground="Black"
                                           TextWrapping="Wrap">
                                    This is long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long text
                                </TextBlock>
                                <Fluent:Button HorizontalAlignment="Left"
                                               Click="OnBlueClick"
                                               Icon="Images\Paste.png"
                                               IsDefinitive="True"
                                               IsEnabled="True"
                                               LargeIcon="Images\PasteLarge.png"
                                               Style="{DynamicResource ButtonBackstageStyle}">
                                    123
                                </Fluent:Button>
                                <Fluent:DropDownButton HorizontalAlignment="Right"
                                                       Header="123"
                                                       Icon="Images\Paste.png"
                                                       LargeIcon="Images\PasteLarge.png" />
                                <Fluent:ComboBox VerticalAlignment="Bottom">
                                    <ComboBoxItem Content="1" Style="{DynamicResource MetroComboBoxItemBackstageStyle}" />
                                    <ComboBoxItem Content="2" />
                                    <ComboBoxItem Content="3" />
                                    <ComboBoxItem Content="4" />
                                    <TextBlock Text="5" />
                                </Fluent:ComboBox>
                                <Fluent:Spinner HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Format="0"
                                                Header="Lala"
                                                InputWidth="50"
                                                ValueChanged="OnSpinnerValueChanged"
                                                Value="1" />
                            </Grid>
                        </Fluent:BackstageTabItem>
                        <Fluent:BackstageTabItem Fluent:KeyTip.Keys="P" Header="Print">
                            <Grid Margin="50"
                                  Background="Yellow"
                                  Opacity="0.3" />
                        </Fluent:BackstageTabItem>
                        <Fluent:Button Command="ApplicationCommands.Close"
                                       Fluent:KeyTip.Keys="X"
                                       Header="Exit"
                                       Icon="Images\Exit.png" />
                    </Fluent:BackstageTabControl>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>

            <Fluent:Ribbon.ToolBarItems>
                <Fluent:Button Click="OnHelpClick"
                               Icon="Images/Help.png"
                               Size="Small">
                    <Fluent:Button.ToolTip>
                        <Fluent:ScreenTip Title="Insert Chart"
                                          Width="190"
                                          DisableReason="Disable reason reason."
                                          HelpTopic="http:\\fluent.codeplex.com"
                                          Image="pack://application:,,,/FluentTest;component\Images\SampleImageForScreenTip.png"
                                          IsRibbonAligned="True"
                                          Text="Insert a chart to illustarate and compare data. &#10;&#10;Bar, Pie, Line, Area and Surface are same of the available types." />
                    </Fluent:Button.ToolTip>
                </Fluent:Button>
            </Fluent:Ribbon.ToolBarItems>

            <Fluent:Ribbon.QuickAccessItems>
                <Fluent:QuickAccessMenuItem IsChecked="True" Target="{Binding ElementName=pasteButton}" />
                <Fluent:QuickAccessMenuItem IsChecked="True" Target="{Binding ElementName=cutButton}" />
                <Fluent:QuickAccessMenuItem Target="{Binding ElementName=copyButton}" />
            </Fluent:Ribbon.QuickAccessItems>

            <Fluent:RibbonTabItem x:Name="homeTabItem"
                                  Fluent:KeyTip.Keys="H"
                                  Header="Home"
                                  ReduceOrder="Font, Font, Font, Font,B,A,A,A,(A),(A),(A),Clipboard,Font,B,B,(A),C,(A),(A)"
                                  ToolTip="Regular Tool Tip">
                <Fluent:RibbonGroupBox x:Name="Clipboard"
                                       Fluent:KeyTip.Keys="C"
                                       Header="Clipboard"
                                       Icon="pack://application:,,,/FluentTest;component/Images/Default.png"
                                       IsLauncherVisible="True"
                                       LauncherClick="OnLauncherButtonClick"
                                       LauncherKeys="ZB">
                    <Fluent:SplitButton x:Name="pasteButton"
                                        Command="Paste"
                                        Fluent:KeyTip.Keys="V"
                                        Header="Paste"
                                        Icon="Images\Paste.png"
                                        LargeIcon="Images\PasteLarge.png"
                                        SizeDefinition="Large">
                        <Fluent:SplitButton.ToolTip>
                            <Fluent:ScreenTip Title="Paste (Ctrl+V)"
                                              Width="190"
                                              DisableReason="Enable it do use this function"
                                              Text="Paste the contents of the Clipboard." />
                        </Fluent:SplitButton.ToolTip>
                        <Fluent:Gallery GroupBy="Tag"
                                        ItemHeight="32"
                                        ItemWidth="32"
                                        Orientation="Horizontal"
                                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                        Selectable="False">
                            <Fluent:Gallery.ItemContainerStyle>
                                <Style BasedOn="{StaticResource {x:Type Fluent:GalleryItem}}" TargetType="{x:Type Fluent:GalleryItem}">
                                    <Setter Property="Fluent:GalleryItem.Command" Value="Paste" />
                                </Style>
                            </Fluent:Gallery.ItemContainerStyle>
                            <Image Width="24"
                                   Height="24"
                                   Fluent:KeyTip.Keys="K"
                                   Source="Images\PasteImage.png"
                                   Tag="Paste Options:" />
                            <Image Width="24"
                                   Height="24"
                                   Fluent:KeyTip.Keys="M"
                                   Source="Images\PasteText.png"
                                   Tag="Paste Options:" />
                            <Image Width="24"
                                   Height="24"
                                   Fluent:KeyTip.Keys="T"
                                   Source="Images\PasteTextOnly.png"
                                   Tag="Paste Options:" />
                            <Image Width="24"
                                   Height="24"
                                   Fluent:KeyTip.Keys="L"
                                   Source="Images\PasteFormating.png"
                                   Tag="Paste Options:" />
                            <Image Width="24"
                                   Height="24"
                                   Fluent:KeyTip.Keys="E"
                                   Source="Images\PasteSourceFormating.png"
                                   Tag="Paste Options:" />
                        </Fluent:Gallery>
                        <Fluent:MenuItem Command="{x:Static FluentTest:TestWindow.CustomRoutedCommand}"
                                         Fluent:KeyTip.Keys="S"
                                         Header="Paste Special...">
                            <Fluent:MenuItem.ToolTip>
                                <Fluent:ScreenTip Title="Paste Special" Text="This ScreenTip is attached to menu item" />
                            </Fluent:MenuItem.ToolTip>
                        </Fluent:MenuItem>
                        <Separator />
                        <Fluent:MenuItem Command="Paste"
                                         Fluent:KeyTip.Keys="A"
                                         Header="Set Default Paste..."
                                         IsSplited="True">
                            <Fluent:MenuItem Click="OnMenuItemClick" Header="1" />
                            <Fluent:MenuItem Command="Paste" Header="2" />
                        </Fluent:MenuItem>
                        <Fluent:MenuItem Command="Paste" Header="Paste now" />
                    </Fluent:SplitButton>
                    <Fluent:Button x:Name="cutButton"
                                   Command="Cut"
                                   Fluent:KeyTip.Keys="X"
                                   Header="Cut"
                                   Icon="Images\Cut.png"
                                   SizeDefinition="Middle,Small">
                        <Fluent:Button.ToolTip>
                            <Fluent:ScreenTip Title="Cut (Ctrl+X)"
                                              Width="190"
                                              DisableReason="Cut is currently not available."
                                              Text="Cut the contents to the Clipboard." />
                        </Fluent:Button.ToolTip>
                    </Fluent:Button>
                    <Fluent:Button x:Name="copyButton"
                                   Command="Copy"
                                   Fluent:KeyTip.Keys="C"
                                   Header="Copy"
                                   Icon="Images\Copy.png"
                                   SizeDefinition="Middle,Small" />
                    <Fluent:Button Click="OnFormatPainterClick"
                                   Fluent:KeyTip.Keys="FP"
                                   Header="Format Painter"
                                   Icon="Images\FormatPainter.png"
                                   SizeDefinition="Middle,Small" />
                    <Fluent:DropDownButton Name="buttonWatermark"
                                           VerticalAlignment="Top"
                                           Header="Watermark"
                                           Icon="Images\watermark32.png"
                                           IsEnabled="True"
                                           LargeIcon="Images\watermark32.png">
                        <Fluent:Gallery x:Name="WatermarkGallery"
                                        GroupBy="Tag"
                                        ItemHeight="100"
                                        ItemWidth="100"
                                        MaxItemsInRow="3"
                                        MinItemsInRow="1"
                                        Orientation="Horizontal"
                                        SelectedFilter="{Binding ElementName=galleryFilterAll3}">

                            <Fluent:Gallery.Filters>
                                <Fluent:GalleryGroupFilter x:Name="galleryFilterAll3"
                                                           Title="All"
                                                           Groups="Confidential,Disclaimers,Urgent" />
                                <Fluent:GalleryGroupFilter Title="Confidential" Groups="Confidential" />
                                <Fluent:GalleryGroupFilter Title="Disclaimers" Groups="Disclaimers" />
                                <Fluent:GalleryGroupFilter Title="Urgent" Groups="Urgent" />
                            </Fluent:Gallery.Filters>

                            <!--  Confidential group items  -->
                            <Border BorderBrush="Transparent"
                                    BorderThickness="4"
                                    Tag="Confidential">
                                <StackPanel>
                                    <Image VerticalAlignment="Top"
                                           Source="Images\confidential.png"
                                           Stretch="None" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Text="CONFIDENTIAL 1" />
                                </StackPanel>
                            </Border>
                            <Border BorderBrush="Transparent"
                                    BorderThickness="4"
                                    Tag="Confidential">
                                <StackPanel>
                                    <Image VerticalAlignment="Top"
                                           Source="Images\confidential2.png"
                                           Stretch="None" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Text="CONFIDENTIAL 2" />
                                </StackPanel>
                            </Border>
                            <Border BorderBrush="Transparent"
                                    BorderThickness="4"
                                    Tag="Confidential">
                                <StackPanel>
                                    <Image VerticalAlignment="Top"
                                           Source="Images\donotcopy1.png"
                                           Stretch="None" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Text="DO NOT COPY 1" />
                                </StackPanel>
                            </Border>
                            <Border BorderBrush="Transparent"
                                    BorderThickness="4"
                                    Tag="Confidential">
                                <StackPanel>
                                    <Image VerticalAlignment="Top"
                                           Source="Images\donotcopy2.png"
                                           Stretch="None" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Text="DO NOT COPY 2" />
                                </StackPanel>
                            </Border>

                            <!--  Disclaimers group items  -->
                            <Border x:Name="Disclaimers"
                                    BorderBrush="Transparent"
                                    BorderThickness="4"
                                    Tag="Disclaimers">
                                <StackPanel>
                                    <Image VerticalAlignment="Top"
                                           Source="Images\draft1.png"
                                           Stretch="None" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Text="DRAFT 1" />
                                </StackPanel>
                            </Border>
                            <Border BorderBrush="Transparent"
                                    BorderThickness="4"
                                    Tag="Disclaimers">
                                <StackPanel>
                                    <Image VerticalAlignment="Top"
                                           Source="Images\draft2.png"
                                           Stretch="None" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Text="DRAFT 2" />
                                </StackPanel>
                            </Border>
                            <Border BorderBrush="Transparent"
                                    BorderThickness="4"
                                    Tag="Disclaimers">
                                <StackPanel>
                                    <Image VerticalAlignment="Top"
                                           Source="Images\sample1.png"
                                           Stretch="None" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Text="SAMPLE 1" />
                                </StackPanel>
                            </Border>
                            <Border BorderBrush="Transparent"
                                    BorderThickness="4"
                                    Tag="Disclaimers">
                                <StackPanel>
                                    <Image VerticalAlignment="Top"
                                           Source="Images\sample2.png"
                                           Stretch="None" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Text="SAMPLE 2" />
                                </StackPanel>
                            </Border>

                            <!--  Disclaimers group items  -->
                            <Border x:Name="Urgent"
                                    BorderBrush="Transparent"
                                    BorderThickness="4"
                                    Tag="Urgent">
                                <StackPanel>
                                    <Image VerticalAlignment="Top"
                                           Source="Images\asap1.png"
                                           Stretch="None" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Text="ASAP 1" />
                                </StackPanel>
                            </Border>
                            <Border BorderBrush="Transparent"
                                    BorderThickness="4"
                                    Tag="Urgent">
                                <StackPanel>
                                    <Image VerticalAlignment="Top"
                                           Source="Images\asap2.png"
                                           Stretch="None" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Text="ASAP 2" />
                                </StackPanel>
                            </Border>
                            <Border BorderBrush="Transparent"
                                    BorderThickness="4"
                                    Tag="Urgent">
                                <StackPanel>
                                    <Image VerticalAlignment="Top"
                                           Source="Images\urgent1.png"
                                           Stretch="None" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Text="URGENT 1" />
                                </StackPanel>
                            </Border>
                            <Border BorderBrush="Transparent"
                                    BorderThickness="4"
                                    Tag="Urgent">
                                <StackPanel>
                                    <Image VerticalAlignment="Top"
                                           Source="Images\urgent2.png"
                                           Stretch="None" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Text="URGENT 2" />
                                </StackPanel>
                            </Border>
                        </Fluent:Gallery>

                        <!--  Menu Items **** NOTICE THIS IS OUTSIDE OF THE GALLERY ****  -->
                        <Fluent:MenuItem Name="buttonRemoveWatermark"
                                         Header="Remove Watermark"
                                         Icon="Images\removeWatermark16.png"
                                         IsEnabled="True"
                                         Size="Middle" />
                    </Fluent:DropDownButton>

                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox x:Name="Font"
                                       Fluent:KeyTip.Keys="ZF"
                                       Header="Font"
                                       Icon="pack://application:,,,/FluentTest;component/Images/FontColor.png"
                                       IsLauncherVisible="True"
                                       LauncherClick="OnLauncherButtonClick"
                                       LauncherIcon="/Images/FontColor.png"
                                       LauncherKeys="NF">
                    <Fluent:RibbonToolBar>

                        <!--  ToolBar Layout Definitions  -->

                        <Fluent:RibbonToolBar.LayoutDefinitions>
                            <Fluent:RibbonToolBarLayoutDefinition Size="Large">
                                <Fluent:RibbonToolBarRow>
                                    <Fluent:RibbonToolBarControlDefinition Width="75" Target="comboBoxFontName" />
                                    <Fluent:RibbonToolBarControlDefinition Width="45" Target="comboBoxFontSize" />
                                    <Fluent:RibbonToolBarControlGroupDefinition>
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonGrowFont" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonShrinkFont" />
                                    </Fluent:RibbonToolBarControlGroupDefinition>
                                    <Fluent:RibbonToolBarControlGroupDefinition>
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonChangeCase" />
                                    </Fluent:RibbonToolBarControlGroupDefinition>
                                    <Fluent:RibbonToolBarControlGroupDefinition>
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonClearFormatting" />
                                    </Fluent:RibbonToolBarControlGroupDefinition>
                                </Fluent:RibbonToolBarRow>
                                <Fluent:RibbonToolBarRow>
                                    <Fluent:RibbonToolBarControlGroupDefinition>
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonBold" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonItalic" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonUnderline" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonStrikethrough" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonSubscript" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonSuperscript" />
                                    </Fluent:RibbonToolBarControlGroupDefinition>
                                    <Fluent:RibbonToolBarControlGroupDefinition>
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonTextEffects" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonTextHighlightColor" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonFontColor" />
                                    </Fluent:RibbonToolBarControlGroupDefinition>
                                </Fluent:RibbonToolBarRow>
                            </Fluent:RibbonToolBarLayoutDefinition>

                            <Fluent:RibbonToolBarLayoutDefinition Size="Middle">
                                <Fluent:RibbonToolBarRow>
                                    <Fluent:RibbonToolBarControlDefinition Width="125" Target="comboBoxFontName" />
                                    <Fluent:RibbonToolBarControlDefinition Width="50" Target="comboBoxFontSize" />
                                </Fluent:RibbonToolBarRow>
                                <Fluent:RibbonToolBarRow>
                                    <Fluent:RibbonToolBarControlGroupDefinition>
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonBold" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonItalic" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonUnderline" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonStrikethrough" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonSubscript" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonSuperscript" />
                                    </Fluent:RibbonToolBarControlGroupDefinition>
                                    <Fluent:RibbonToolBarControlGroupDefinition>
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonClearFormatting" />
                                    </Fluent:RibbonToolBarControlGroupDefinition>
                                </Fluent:RibbonToolBarRow>
                                <Fluent:RibbonToolBarRow>
                                    <Fluent:RibbonToolBarControlGroupDefinition>
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonTextEffects" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonTextHighlightColor" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonFontColor" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonChangeCase" />
                                    </Fluent:RibbonToolBarControlGroupDefinition>
                                    <Fluent:RibbonToolBarControlGroupDefinition>
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonGrowFont" />
                                        <Fluent:RibbonToolBarControlDefinition Target="buttonShrinkFont" />
                                    </Fluent:RibbonToolBarControlGroupDefinition>
                                </Fluent:RibbonToolBarRow>
                            </Fluent:RibbonToolBarLayoutDefinition>
                        </Fluent:RibbonToolBar.LayoutDefinitions>

                        <!--  ToolBar Controls  -->

                        <Fluent:ComboBox x:Name="comboBoxFontName"
                                         Height="22"
                                         MinWidth="40"
                                         BorderBrush="Gainsboro"
                                         DisplayMemberPath="Text"
                                         Fluent:KeyTip.Keys="FF"
                                         Foreground="#FF222222"
                                         GroupBy="Tag"
                                         IsTextSearchEnabled="True"
                                         ResizeMode="Vertical"
                                         SelectedIndex="0"
                                         SizeDefinition="Small">
                            <TextBlock Tag="Theme Fonts" Text="Arial" />
                            <TextBlock Tag="Theme Fonts" Text="Tahoma" />
                            <TextBlock Tag="Recent Used Fonts" Text="Tahoma" />
                            <TextBlock Tag="AllFonts" Text="Arial" />
                            <TextBlock x:Name="segoeFont"
                                       Tag="AllFonts"
                                       Text="Segoe UI" />
                            <TextBlock Tag="AllFonts" Text="Tahoma" />
                            <TextBlock Tag="AllFonts" Text="Webdings" />
                            <TextBlock Tag="AllFonts" Text="Winding" />
                        </Fluent:ComboBox>
                        <Fluent:ComboBox x:Name="comboBoxFontSize"
                                         Width="49"
                                         Height="22"
                                         HorizontalAlignment="Left"
                                         BorderBrush="Gainsboro"
                                         DisplayMemberPath="Text"
                                         Fluent:KeyTip.Keys="FS"
                                         Foreground="#FF222222"
                                         IsEditable="False"
                                         ResizeMode="Vertical"
                                         SelectedIndex="1"
                                         SizeDefinition="Small"
                                         Text="12">
                            <TextBlock Text="7" />
                            <TextBlock Text="8" />
                            <TextBlock Text="9" />
                            <TextBlock Text="10" />
                            <TextBlock Text="11" />
                            <TextBlock Text="12" />
                            <TextBlock Text="14" />
                            <TextBlock Text="16" />
                            <TextBlock Text="18" />
                            <TextBlock Text="20" />
                            <TextBlock Text="22" />
                            <TextBlock Text="24" />
                            <TextBlock Text="28" />
                            <TextBlock Text="32" />
                            <TextBlock Text="36" />
                            <TextBlock Text="48" />
                            <TextBlock Text="72" />
                        </Fluent:ComboBox>
                        <Fluent:Button x:Name="buttonGrowFont"
                                       HorizontalAlignment="Left"
                                       Fluent:KeyTip.Keys="GF"
                                       Icon="Images\GrowFont.png"
                                       SizeDefinition="Small" />
                        <Fluent:Button x:Name="buttonShrinkFont"
                                       HorizontalAlignment="Left"
                                       Icon="Images\ShrinkFont.png"
                                       SizeDefinition="Small" />
                        <Fluent:DropDownButton x:Name="buttonChangeCase"
                                               HorizontalAlignment="Left"
                                               Icon="Images\ChangeCase.png"
                                               SizeDefinition="Small" />
                        <Fluent:Button x:Name="buttonClearFormatting"
                                       HorizontalAlignment="Left"
                                       Icon="Images\ClearFormatting.png"
                                       SizeDefinition="Small" />
                        <Fluent:ToggleButton x:Name="buttonBold"
                                             HorizontalAlignment="Left"
