<Window x:Class="WpfStudy.Shapes.Ploygen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ploygen"
        Width="300"
        Height="300">
    <Grid>
        <Canvas>
            <Polygon Canvas.Left="24"
                     Canvas.Top="65"
                     Points="10,50 180,50 180,150 10,150"
                     Stroke="Black"
                     StrokeThickness="1" />

            <Polygon Canvas.Left="154"
                     Canvas.Top="65"
                     Fill="Salmon"
                     Points="0,0 50,50 0,50" />

            <Polyline Points="50,20 100,20" Stroke="Red" />
        </Canvas>
    </Grid>
</Window>
